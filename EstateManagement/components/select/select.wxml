<view class='com-selectBox'>
  <view class='com-sContent' bindtap='selectToggle'>
    <view class='com-sTxt'>{{nowText}}</view>
    <image src='https://i.loli.net/2021/03/14/I8gTy3qJ6aLv9uV.png' class='com-sImg' animation="{{animationData}}">
    </image>
  </view>
  <view class='com-sList' wx:if="{{selectShow}}">
    <view wx:for="{{propArray}}" data-index="{{index}}" wx:key='' class='com-sItem' bindtap='setText'>{{item.text}}
    </view>
  </view>
</view>