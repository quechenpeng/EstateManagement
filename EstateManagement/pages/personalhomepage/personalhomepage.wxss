@import "../../styles/iconfont.wxss";

.top {
  width: 100%;
  height: 120px;
  background-color: #eaf2fd;
  background: linear-gradient(#f4f9ff, #f0f7ff, #eef7ff, #ecf4ff);
  /* #ecf4ff */
  display: flex;
  position: relative;
}

.headportrait {
  width: 60px;
  height: 60px;
  border-radius: 60px;
  background-color: #fff;
  margin-top: 20px;
  margin-left: 20px;
}

.headportrait image {
  width: 60px;
  height: 60px;
  border-radius: 60px;
}

.nickname {
  width: 50%;
  height: 120px;
  margin-top: 30px;
  margin-left: 10px;
}

.nickname view {
  font-size: 18px;
}

.edit {
  width: 25%;
  height: 120px;
  font-size: 20px;
  float: right;
  margin-top: 10px;
  margin-right: 10px;
}

.service {
  padding: 40rpx;
}

.title {
  padding: 20rpx 0;
  letter-spacing: 1px;
}

.modular {
  width: 100%;
  height: 40px;
  display: flex;
  margin-top: 10px;
}

.rricon {
  width: 5%;
  height: 100%;
}

.rrtitle {
  width: 39%;
  height: 100%;
  text-align: center;
  line-height: 40px;
  font-weight: 300;
  color: #000000;
}

.rrarrow {
  width: 56%;
  height: 100%;
}

.iconsize {
  line-height: 40px;
  font-size: 20px;
}

.jiantou {
  line-height: 40px;
  text-align: right;
  font-size: 20px;
  color: #aca2a2;
}

.backhome {
  color: #5687bf;
  border: 2rpx solid #5687bf;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}