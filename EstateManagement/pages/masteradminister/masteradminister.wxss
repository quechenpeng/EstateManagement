page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #e7e7e7;
}

.modular {
  width: 100%;
  height: 70px;
  margin-top: 8px;
  background-color: #fff;
  display: flex;
}

navigator {
  width: 100%;
  height: 70px;
  background-color: #fff;
  display: flex;
}

.left {
  width: 25%;
  height: 100%;
}

.center {
  width: 50%;
  height: 100%;
}

.right {
  width: 25%;
  height: 100%;
}

.headportrait {
  width: 40px;
  height: 40px;
  border-radius: 40px;
  background-color: #fff;
  margin-top: 15px;
  margin-left: 20px;
}

.headportrait image {
  width: 40px;
  height: 40px;
  border-radius: 40px;
}

.name {
  width: 100%;
  height: 50%;
  line-height: 35px;
  font-size: 12px;
}

.phone {
  width: 100%;
  height: 50%;
  line-height: 35px;
  font-size: 12px;
}

.monadic {
  font-size: 10px;
  color: #808b9f;
  margin-top: 15px;
}