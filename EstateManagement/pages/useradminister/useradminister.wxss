page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #e7e7e7;
}

.modular {
  width: 100%;
  height: 70px;
  margin-top: 8px;
  background-color: #fff;
  display: flex;
}

navigator {
  width: 100%;
  height: 70px;
  background-color: #fff;
  display: flex;
}

.left {
  width: 25%;
  height: 100%;
}

.right {
  width: 75%;
  height: 100%;
}

.headportrait {
  width: 40px;
  height: 40px;
  margin-top: 15px;
  border-radius: 40px;
  background-color: #fff;
  margin-left: 20px;
}

.headportrait image {
  width: 40px;
  height: 40px;
  border-radius: 40px;
}

.righttop {
  width: 100%;
  height: 50%;
  display: flex;
  position: relative;
}

.rightbottom {
  width: 100%;
  height: 50%;
  display: flex;
}

.name {
  height: 100%;
  line-height: 35px;
  font-size: 12px;
}

.address {
  height: 100%;
  line-height: 35px;
  font-size: 12px;
  position: absolute;
  right: 0;
  margin-right: 10px;
}

.phone {
  width: 100%;
  height: 50%;
  line-height: 35px;
  font-size: 12px;
}