@import "../../styles/iconfont.wxss";

.top {
  width: 100%;
  height: 100px;
}

.black {
  width: 100%;
  height: 100%;
  background-color: #0a043c;
}

.black image {
  width: 100%;
  height: 150px;
}

.white {
  width: 100%;
  height: 50%;
  background-color: white;
  border-radius: 100% / 100% 100% 0 0;
  margin-top: -50px;
}

.topicon {
  width: 60px;
  height: 60px;
  border-radius: 60px;
  /* background: linear-gradient(#1e212d, #3f424e, #64666e); */
  background-color: #130f3a;
  margin-top: -80px;
  margin-left: 40%;
  border: 2px solid #f6f6f6;
}

.topicon view {
  font-size: 40px;
  line-height: 60px;
  display: flex;
  justify-content: center;
}

.bxcolor {
  color: #f6f6f6;
}

.title {
  width: 100%;
  height: 40px;
  display: flex;
  margin-top: 10px;
  margin-left: 10px;
}

.titleimage {
  width: 8%;
  height: 100%;
}

.titlecontent {
  width: 92%;
  height: 100%;
  font-size: 16px;
  line-height: 40px;
  padding-left: 4px;
}

.titleimage view {
  font-size: 24px;
  color: #000000;
  line-height: 40px;
}

.form {
  padding: 40rpx;
}

.row-group {
  padding: 20rpx 0;
  position: relative;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  height: 35px;
}

.row-group .icontips {
  width: 8%;
  height: 100%;
  line-height: 35px;
  font-size: 16px;
}

.row-group text {
  width: 36%;
  height: 100%;
  font-size: 33rpx;
  line-height: 35px;
}

.row-group input {
  width: 56%;
  height: 100%;
  text-align: right;
  line-height: 35px;
}

.iconcolor {
  width: 42px;
  height: 30px;
  color: #000000;
}

.txt {
  color: #ccc;
  font-size: 33rpx;
}

.section {
  width: 56%;
  height: 100%;
  text-align: right;
  line-height: 35px;
}

textarea {
  height: 180px;
  font-weight: 400;
  border-bottom: 1rpx solid #ddd;
}

.descriptionlength {
  position: absolute;
  bottom: 0px;
}

.submit {
  margin-top: 40rpx;
  color: #fff;
  border: 2rpx solid #575d75;
  background-color: #575d75;
  font-size: 32rpx;
  font-weight: bold;
}