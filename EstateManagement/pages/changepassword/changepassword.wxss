page {
  background-color: #e7e7e7;
}

.box {
  width: 100%;
  height: 70px;
}

.box view {
  width: 100%;
  height: 35px;
  line-height: 35px;
  text-align: center;
  font-size: 13px;
  letter-spacing: 1px;
  color: #909090;
}

.box input {
  width: 100%;
  height: 35px;
  line-height: 35px;
  background-color: #ffffff;
  border-top: 1px solid #c7c7c7;
  border-bottom: 1px solid #c7c7c7;
  text-align: center;
}

.txt {
  font-size: 13px;
  letter-spacing: 1px;
  color: #7c7c7c;
}

.submit {
  margin-top: 40px;
  color: #fff;
  border: 2rpx solid #0079fe;
  background-color: #0079fe;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 1px;
}