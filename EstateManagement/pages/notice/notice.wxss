@import "../../styles/iconfont.wxss";

.top {
  width: 100%;
  height: 100px;
  display: flex;
  margin-top: 10px;
  border-bottom: 0.1px solid #f8f8f8;
}

.text {
  width: 20%;
  height: 100%;
  margin-left: 20px;
}

.texttext {
  width: 100%;
  height: 35%;
  font-size: 30px;
  color: #70af85;
}

.image {
  width: 80%;
  height: 100%;
}

.image image {
  width: 200px;
  height: 90px;
  margin-left: -20px;
}

.blank {
  width: 100%;
  height: 20px;
}

.form {
  margin-bottom: 30px;
}

.box {
  width: 100%;
  height: 150px;
  display: flex;
}

.blankleft {
  width: 5%;
  height: 100%;
}

.content {
  width: 90%;
  height: 100%;
  border-radius: 5px;
  box-shadow: 1px 1px 5px #f8f8f8;
  display: flex;
}

.blankright {
  width: 5%;
  height: 100%;
}

.contentleft {
  width: 30%;
  height: 100%;
}

.contentright {
  width: 70%;
  height: 100%;
  margin-right: 10px;
}

.year {
  font-size: 20px;
  text-align: center;
  margin-top: 10px;
  font-weight: 380;
}

.monthday {
  font-size: 16px;
  text-align: center;
  margin-top: 2px;
  color: #888888;
  font-weight: 360;
}

.contenttitle {
  width: 100%;
  height: 20%;
  margin-top: 10px;
  font-size: 20px;
  font-weight: 360;
  letter-spacing: 1px;
}

.contentcontent {
  width: 100%;
  height: 82.95px;
  margin-top: 2px;
  font-size: 15px;
  font-weight: 300;
  letter-spacing: 1px;
  text-indent: 32px;
  color: rgb(29, 25, 25);

  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}

.contentreadingvolume {
  width: 100%;
  height: 30px;
  display: flex;
  position: relative;
}

.iconreadingvolume {
  font-size: 20px;
  color: #888888;
  position: absolute;
  right: 0;
  margin-right: 45px;
  line-height: 30px;
}

.textreadingvolume {
  color: #888888;
  font-size: 12px;
  position: absolute;
  right: 0;
  margin-right: 20px;
  line-height: 30px;
}